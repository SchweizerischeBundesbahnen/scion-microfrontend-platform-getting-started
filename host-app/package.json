{
  "name": "host-app",
  "scripts": {
    "start": "cpy src/*.json dist && parcel src/*.html --port 4200 --no-cache --open",
    "build": "cpy src/*.json dist && cpy src/favicon.ico dist && parcel build src/*.html --no-cache",
    "prebuild": "tsc --noEmit"
  },
  "dependencies": {
    "@scion/microfrontend-platform": "latest",
    "@scion/toolkit": "latest",
    "rxjs": "^7.5.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.3.1",
    "@types/node": "^15.6.1",
    "cpy-cli": "^3.1.1",
    "parcel": "^2.3.1",
    "typescript": "^4.6.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "alias": {
    "process": false
  }
}
