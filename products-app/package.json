{
  "name": "products-app",
  "scripts": {
    "start": "run-p parcel:serve \"assets:copy -- --watch\"",
    "build": "run-s parcel:build assets:copy",
    "parcel:serve": "parcel src/**/*.html --port 4201 --no-cache",
    "parcel:build": "tsc --noEmit && parcel build src/**/*.html --no-cache",
    "assets:copy": "copy-and-watch src/{manifest.json,favicon.ico} dist/"
  },
  "dependencies": {
    "@scion/microfrontend-platform": "latest",
    "@scion/toolkit": "latest",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "copy-and-watch": "^0.1.6",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "typescript": "^4.8.4"
  },
  "alias": {
    "process": false,
    "@scion/toolkit/*": "./node_modules/@scion/toolkit/fesm2020/scion-toolkit-$1.mjs"
  },
  "browserslist": [
    "defaults"
  ]
}
